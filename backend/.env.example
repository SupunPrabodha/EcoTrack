PORT=5000
MONGO_URI=mongodb+srv://<username>:<password>@<cluster-host>/<db-name>?retryWrites=true&w=majority
JWT_SECRET=<set_a_long_random_secret>
JWT_EXPIRES_IN=7d
COOKIE_SECURE=false
COOKIE_NAME=accessToken
# Optional: set when you need cross-subdomain cookies (typically leave empty)
COOKIE_DOMAIN=
# Optional override (lax|none|strict). If empty, derived from COOKIE_SECURE.
COOKIE_SAMESITE=

# Admin bootstrap (dev/demo only)
# Use this once to promote the first admin user via POST /api/admin/bootstrap.
# After an admin exists, the endpoint will refuse to run.
ALLOW_BOOTSTRAP_ADMIN=false
BOOTSTRAP_ADMIN_TOKEN=<set_a_long_random_token>

# Hosting / security
NODE_ENV=development
TRUST_PROXY=false
# Comma-separated origins for browser clients (Vercel URL etc). Empty = allow all.
CORS_ORIGINS=http://localhost:5173,http://localhost:5174

# Third-party timeouts
REQUEST_TIMEOUT_MS=2500

OPENWEATHER_API_KEY=<your_openweather_key>
OPENWEATHER_CITY=Colombo

# Carbon Interface (optional)
CARBON_INTERFACE_API_KEY=<your_carbon_interface_key>
CARBON_INTERFACE_BASE_URL=https://www.carboninterface.com/api/v1
CARBON_INTERFACE_ELECTRICITY_COUNTRY=LK
# Vehicle model id required for car_km estimates via Carbon Interface
CARBON_INTERFACE_VEHICLE_MODEL_ID=

# Carbon Intensity (optional)
CARBON_INTENSITY_BASE_URL=https://api.carbonintensity.org.uk
CARBON_INTENSITY_REGION=

# SendGrid (optional)
SENDGRID_API_KEY=<your_sendgrid_key>
SENDGRID_FROM_EMAIL=
SENDGRID_SANDBOX_MODE=true

# Brevo (Sendinblue) (optional)
# If you configure both SendGrid and Brevo, you can pick one explicitly:
# EMAIL_PROVIDER=sendgrid
# EMAIL_PROVIDER=brevo
EMAIL_PROVIDER=brevo
BREVO_API_KEY=<your_brevo_key>
BREVO_SENDER_EMAIL=<your_sender_email>
BREVO_SENDER_NAME=EcoTrack
